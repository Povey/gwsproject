<h2> Add New image </h2>

<%= form_for @image do |f| %>

  <% if @image.errors.any? %>
  <% @image.errors.full_messages.each do |msg| %>
  <!-- show errors -->
  <div class="alert alert-danger"><%= msg %></div>
  <% end %>
  <% end %>

  <div class="form-group">
    <%= f.label :name %> <br />
    <%= f.text_field :image_name, class:'form-control' %></br >
  </div>

  <div class="form-group">
    <%= f.label :category %> <br />
    <%= f.select :category_id, Category.all.collect {|x| [x.name, x.id]},
    {:include_blank => 'Select One'}, class:'form-control' %></br ></br >
  </div>

  <div class="form-group">
    <%= f.label :image %> <br />
    <%= f.file_field :attachment %></br >
  </div>


  <%= f.submit "Submit", class:'btn btn-primary' %>
  <%=link_to "Cancel", images_path, class:'btn btn default' %>

<% end %>
