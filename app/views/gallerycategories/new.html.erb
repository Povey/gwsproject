<h2> Add New Category </h2>

<%= form_for @gallerycategory do |f| %>

    <!--checking for errors -->
    <% if @gallerycategory.errors.any? %>
    <% @gallerycategory.errors.full_messages.each do |msg| %>
    <!-- show errors -->
    <div class="alert alert-danger"><%= msg %></div>
    <% end %>
    <% end %>

  <div class="form-group">
    <%= f.label :name %> <br />
    <%= f.text_field :name, class:'form-control' %></br >
  </div>

  <%= f.submit "Submit", class:'btn btn-primary' %>
  <%=link_to "Cancel", gallerycategories_path, class:'btn btn default' %>

<% end %>
